<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WebView Animation Demo</title>
    <style>
        body {
            text-align: center;
            font-family: Arial, sans-serif;
            margin: 50px;
        }

        .box {
            width: 100px;
            height: 100px;
            background-color: red;
            margin: 20px auto;
            position: relative;
            animation: bounce 2s infinite alternate;
        }

        @keyframes bounce {
            from { transform: translateY(0); }
            to { transform: translateY(-50px); }
        }
    </style>
</head>
<body>

    <h2>WebView Animation Example</h2>
    <div class="box"></div>

    <script>
        function enableAnimations() {
            document.querySelector(".box").style.animation = "bounce 2s infinite alternate";
        }

        function disableAnimations() {
            document.querySelector(".box").style.animation = "none";
        }
    </script>

</body>
</html>
